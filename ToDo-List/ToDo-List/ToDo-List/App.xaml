<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo_List.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="Khaki" />
                <Setter Property="BarTextColor" Value="#0244a1" />
                <Setter Property="BackgroundColor" Value="LemonChiffon"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="White"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#0244a1"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="#0244a1"/>
                <Setter Property="PlaceholderColor" Value="#0763e5"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>