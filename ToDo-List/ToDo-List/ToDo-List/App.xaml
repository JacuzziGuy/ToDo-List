<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo_List.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ContentPage">
                <Setter Property="BackgroundColor" Value="#FDFFFC"/>
            </Style>
            <Style TargetType="Button">
                <Setter Property="TextColor" Value="#FB4D3D"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#345995"/>
            </Style>
            <Style TargetType="Entry">
                <Setter Property="TextColor" Value="#345995"/>
                <Setter Property="PlaceholderColor" Value="#345995"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>