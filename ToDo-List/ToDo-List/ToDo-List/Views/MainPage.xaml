<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDo_List.Views.MainPage">

    <StackLayout Margin="40">
        <Label Text="Do zrobienia:"/>
        <Entry x:Name="entry" Placeholder="Do zrobienia:"/>
        <Button Text="Dodaj" Clicked="SubmitClicked"/>
        <ListView x:Name="itemsList">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout>
                            <Label Text="{Binding Name}"/>
                            <Button Text="Usuń" Clicked="DeleteClicked" CommandParameter="{Binding Id}"/>
                            <Button Text="Gotowe"/>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
