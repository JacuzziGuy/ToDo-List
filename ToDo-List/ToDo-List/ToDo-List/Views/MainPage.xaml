<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ToDo_List.Views.MainPage"
             Title="Do zrobienia:">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackLayout Margin="10">
            <ListView x:Name="itemsList" HasUnevenRows="True" Grid.Row="0">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Checked}" BindingContext="{Binding .}" Grid.Column="0" Grid.Row="0" 
                                      Margin="10" CheckedChanged="CheckedChanged"/>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Title}" FontSize="Large" 
                                   VerticalOptions="CenterAndExpand"/>
                                <ImageButton Grid.Column="2" Grid.Row="0" Clicked="DeleteClicked" Source="cancel.png"
                                    BindingContext="{Binding .}" CornerRadius="40" Margin="10,20,0,20"
                                    HeightRequest="40" VerticalOptions="Center" BackgroundColor="LemonChiffon"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <ImageButton Grid.Row="0" Clicked="AddClicked" Source="plus.png" HeightRequest="80" 
                     HorizontalOptions="Center" VerticalOptions="End" CornerRadius="80" 
                     BackgroundColor="LemonChiffon" Margin="20"/>
    </Grid>

</ContentPage>
