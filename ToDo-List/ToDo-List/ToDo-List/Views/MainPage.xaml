<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ToDo_List.Views.MainPage"
             Title="Do zrobienia">

    <StackLayout Margin="40">
        <Label Text="Dodaj nowe zadanie:" FontSize="Large" FontAttributes="Bold" Margin="0,0,0,10" TextColor="#0244a1"/>
        <Entry x:Name="entry" Placeholder="Kliknij..." Keyboard="Text" Margin="0,0,0,10" TextColor="#0244a1" PlaceholderColor="#0763e5"/>
        <Button Text="Dodaj" Clicked="SubmitClicked" FontAttributes="Bold" Padding="20" CornerRadius="15" BackgroundColor="OliveDrab"/>
        <ListView x:Name="itemsList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout AlignItems="Center">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Checked}" BindingContext="{Binding .}" Grid.Column="0" Grid.Row="0"
                                          Margin="10" CheckedChanged="CheckedChanged"/>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}"
                                       FontSize="20" VerticalOptions="CenterAndExpand" TextColor="#0244a1"/>
                                <Button Grid.Column="2" Grid.Row="0" Text="Usuń" Clicked="DeleteClicked"
                                        CommandParameter="{Binding Num}" CornerRadius="10" Margin="10,20,0,20"
                                        BackgroundColor="IndianRed"/>
                            </Grid>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
