<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ToDo_List.Views.MainPage">
    
    <StackLayout Margin="40">
        <Label Text="Do zrobienia:"/>
        <Entry x:Name="entry" Placeholder="Do zrobienia:" Keyboard="Text"/>
        <Button Text="Dodaj" Clicked="SubmitClicked"/>
        <ListView x:Name="itemsList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <FlexLayout AlignItems="Center">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding Checked}" BindingContext="{Binding .}" Grid.Column="0" Grid.Row="0"
                                          Margin="10" CheckedChanged="CheckedChanged"/>
                                <Label Grid.Column="1" Grid.Row="0" Text="{Binding Name}"
                                       FontSize="20" VerticalOptions="CenterAndExpand"/>
                                <Button Grid.Column="2" Grid.Row="0" Text="Usuń" Clicked="DeleteClicked"
                                        CommandParameter="{Binding Num}" Margin="10"/>
                            </Grid>
                        </FlexLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
